#--------Random---------
from random import *;
y=randint(1,6) # generates random number from 1 to 6

lst=["rock","paper","scissors"]
z=choice(lst)       ##chooses random element from the list

cards=[1,2,3,4,5,6,7,8,9,'J','Q','K','A']
shuffle(cards)              #shuffles the elements randomly
print(cards)

$------------Exception-Handling----------


try:
  divident=int(input("Enter the dvidiebt:"))
  divisor=int(input("Enter the divisor:"))
  ans=divident/divisor
  
except ZeroDivisionError as e:
    print("Not divisible by 0")
except ValueError:
    print("Numbers allowed!")
except Exception:
    print("Something went Wrong,Try again later")
    
else:
    print(ans) #printing ans only when there are no exceptions
    
    
